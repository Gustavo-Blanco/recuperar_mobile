<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/img_foco1"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:src="@drawable/led_off" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/led1_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On"/>
                <Button
                    android:id="@+id/led1_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off"/>

            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/img_foco2"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/led_off" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/led2_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"/>
            <Button
                android:id="@+id/led2_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/img_foco3"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/led_off" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/led3_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"/>
            <Button
                android:id="@+id/led3_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>